<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import com.project2.MyPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane gridLinesVisible="true" style="-fx-background-color:rgb(30, 27, 206);" minWidth="100" minHeight="300"
         xmlns="http://javafx.com/javafx/8.0.171" 
         xmlns:fx="http://javafx.com/fxml/1" 
         fx:controller="com.project2.PrimaryController">
   <columnConstraints>
      <ColumnConstraints percentWidth="25" hgrow="ALWAYS"  />
      <ColumnConstraints percentWidth="75" hgrow="ALWAYS" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints percentHeight="80" vgrow="ALWAYS" />
      <RowConstraints percentHeight="20" vgrow="ALWAYS" />
   </rowConstraints>
   <children>
      <VBox spacing="50.0" GridPane.columnIndex="0" GridPane.rowIndex="0" >
         <children>
            <VBox alignment="CENTER" spacing="10.0" >
               <children>
                  <Label text="2D Shapes" />
                  <Button fx:id="circleButton" text="Create Circle" />
                  <Button fx:id="circleButton" text="Create Square" />
                  <Button fx:id="circleButton" text="Create Triangle" />
                  <Button fx:id="circleButton" text="Create Rectangle" />
               </children>
            </VBox>
            <VBox alignment="CENTER" spacing="10.0" >
               <children>
                  <Label text="3D Shapes" />
                  <Button fx:id="sphereButton" text="Create Sphere" />
                  <Button fx:id="sphereButton" text="Create Cube" />
                  <Button fx:id="sphereButton" text="Create Cone" />
                  <Button fx:id="sphereButton" text="Create Cylinder" />
                  <Button fx:id="sphereButton" text="Create Torus" />
               </children>
            </VBox>
         </children>
      </VBox>
      <MyPane fx:id="myPane" GridPane.columnIndex="1" GridPane.rowIndex="0" />
   </children>
</GridPane>