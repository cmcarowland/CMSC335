<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.event.ActionEvent?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<GridPane gridLinesVisible="true" style="-fx-background-color:rgb(20, 20, 20);"
         xmlns="http://javafx.com/javafx/8.0.171" 
         xmlns:fx="http://javafx.com/fxml/1" 
         fx:controller="com.project2.SphereController" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="1">
   <columnConstraints>
      <ColumnConstraints percentWidth="33" hgrow="ALWAYS" />
      <ColumnConstraints percentWidth="33" hgrow="ALWAYS" />
      <ColumnConstraints percentWidth="33" hgrow="ALWAYS" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints percentHeight="33" vgrow="ALWAYS" />
      <RowConstraints percentHeight="33" vgrow="ALWAYS" />
      <RowConstraints percentHeight="33" vgrow="ALWAYS" />
   </rowConstraints>
   <children>
      <Label text="Sphere Configuration" GridPane.halignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0" />
      <Label text="Click to place shape" GridPane.halignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="0" />
      <Button fx:id="cancelButton" text="Cancel" GridPane.halignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="0" onAction="#cancelClicked"/>

      <ComboBox fx:id="box1" value="10" GridPane.columnIndex="0" GridPane.rowIndex="1" >
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="5"/>
                    <String fx:value="10"/>
                    <String fx:value="25"/>
                    <String fx:value="50"/>
                </FXCollections>
            </items>
        </ComboBox>
      <Label text="Radius" GridPane.halignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1"  />
      <Label fx:id="radiusLabel" text="1" GridPane.halignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="1" />
   </children>
</GridPane>